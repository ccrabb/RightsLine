<div ng-controller="HomeCtrl" style="margin-top:5px;">
    <div ng-repeat="alert in model.alerts" class="alert alert-info" role="alert">
        {{alert.msg}}
    </div>
    <div class="row" style="margin-top:20px;">
        <div class="col-sm-7">
            <table class="table table-striped table-condensed">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Email</th>
                        <th>Phone</th>
                        <th>Birthdate</th>
                        <th>Gender</th>
                        <th>Active</th>
                        <th></th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    <tr ng-repeat="user in model.users">
                        <td>{{user.Name}}</td>
                        <td><a ng-href="mailto:{{user.Email}}">{{user.Email}}</a></td>
                        <td><a ng-href="tel:{{user.Phone}}">{{user.Phone}}</a></td>
                        <td>{{user.BirthDate | date: shortDate}}</td>
                        <td>{{getGenderName(user.Gender)}}</td>
                        <td><input type="checkbox" ng-model="user.IsActive" disabled="disabled" /></td>
                        <td>
                            <a class="btn btn-success btn-sm" href="#" ng-click="model.currentUser = user;model.showUserForm = true;">
                                <i class="fa fa-edit" title="Edit"></i>
                            </a>
                        </td>
                        <td>
                            <a class="btn btn-danger btn-sm" href="#" ng-click="deleteUser(user);model.showUserForm = false;">
                                <i class="fa fa-ban" title="Delete"></i>
                            </a>
                        </td>
                    </tr>
                </tbody>
            </table>
            <div>
                <a class="btn btn-info" href="#" ng-click="model.currentUser = undefined;model.showUserForm = true;">
                    <i class="fa fa-plus"> Create User</i>
                </a>
            </div>
        </div>
        <div class="col-sm-5" ng-show="model.showUserForm" ng-include="'/app/views/user.view.html'"></div>
    </div>
</div>